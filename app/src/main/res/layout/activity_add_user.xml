<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddUser"
    android:background="@color/sinza"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:background="@color/fg"
        android:padding="15dp"
        >

        <LinearLayout
            android:id="@+id/btnbackCadastroL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/devolta2"
                android:layout_marginTop="0dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Voltar"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/sinza"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/userv2"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="0dp"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/editTextNome"
                    android:layout_width="match_parent"

                    android:hint="Nome"
                    android:inputType="text"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    />


                <EditText
                    android:id="@+id/editTextTelefone"
                    android:layout_width="match_parent"
                    android:hint="Celular"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    android:layout_marginTop="15dp"
                    android:inputType="number"
                    />


                <EditText
                    android:id="@+id/editTextEndereco"
                    android:layout_width="match_parent"
                    android:hint="EndereÃ§o"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    android:layout_marginTop="15dp"
                    />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:hint="Email"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    android:layout_marginTop="15dp"
                    android:inputType="textEmailAddress"
                    />

                <EditText
                    android:id="@+id/editTextMensalidade"
                    android:layout_width="match_parent"
                    android:hint="Mensalidade"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    android:layout_marginTop="15dp"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/editTextIdade"
                    android:layout_width="match_parent"

                    android:hint="Idade"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    android:layout_marginTop="15dp"
                    android:inputType="number"
                    />

                <Spinner
                    android:id="@+id/spnSexo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bordasedit"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"

                    />

                <Spinner
                    android:id="@+id/spnHorario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bordasedit"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"

                    />
                <Spinner
                    android:id="@+id/spnEscalao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bordasedit"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"

                    />

                <EditText
                    android:id="@+id/editTextSenha"
                    android:layout_width="match_parent"

                    android:hint="Senha"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordasedit"
                    android:layout_marginTop="15dp"
                    android:inputType="numberPassword"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Data:" />

                    <TextView
                        android:id="@+id/lData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5px"
                        android:text="00" />

                    <TextView
                        android:id="@+id/txtTesteItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5px"
                        android:text="00" />
                </LinearLayout>





            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/sinza"
        >
        <TextView
            android:id="@+id/btnAddUser"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="00"
            android:background="@drawable/borderv2"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>
